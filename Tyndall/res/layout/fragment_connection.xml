<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
	xmlns:tools="http://schemas.android.com/tools"  
	android:id="@+id/fragmentConnection"
	android:layout_width="match_parent"  
	android:layout_height="match_parent"  
	android:paddingBottom="@dimen/activity_vertical_margin"  
	android:paddingLeft="@dimen/activity_horizontal_margin"  
	android:paddingRight="@dimen/activity_horizontal_margin"  
	android:paddingTop="@dimen/activity_vertical_margin" 
	android:orientation="vertical"  > 
	  
	
    <ScrollView 
        android:id="@+id/ScrlView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
        <LinearLayout 
            android:id="@+id/layoutForScrollConnection"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" 
            >
				
            <TextView
					    android:id="@+id/textViewConnectionNode"
					    android:layout_width="fill_parent"
					    android:layout_height="30sp"
					    android:layout_gravity="center"
					    android:gravity="center"
					    android:background="@drawable/drawable_title"
					    android:text="Nodes connection"
					    android:textColor="@color/white"
					    android:textSize="20sp" />
            
				<LinearLayout 
				    android:paddingTop="20dip"
		            android:id="@+id/layoutForSocketConnection"
		            android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="vertical" 
		            > 
		            
				     
					 <TextView 
					    android:id="@+id/textStatusCl1Connection" 
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content" />
					 
					 <TextView 
					    android:id="@+id/textStatusCl2Connection" 
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content"  />
					 <TextView 
					    android:id="@+id/textStatusCl3Connection" 
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content" />
					 <TextView 
					    android:id="@+id/textStatusCl4Connection" 
					    android:layout_width="fill_parent" 
					    android:layout_height="wrap_content" />
				</LinearLayout>
				
				 
					    
				  <TextView
					    android:id="@+id/textViewConnectionIP"
					    android:layout_width="fill_parent"
					    android:layout_height="30sp"
					    android:layout_gravity="center"
					    android:gravity="center"
					    android:background="@drawable/drawable_title"
					    android:text="IPs connection database"
					    android:textColor="@color/white"
					    android:textSize="20sp" />
				  
				 <LinearLayout 
		            android:id="@+id/layoutForDBConnection"
		            android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="vertical" 
		        	android:paddingTop="20dip"
		            >
				</LinearLayout>
				
				  <TextView
					    android:id="@+id/textViewSportSelection"
					    
					    android:layout_width="fill_parent"
					    android:layout_height="30sp"
					    android:layout_gravity="center"
					    android:gravity="center"
					    android:background="@drawable/drawable_title"
					    android:text="Sport selection"
					    android:textColor="@color/white"
					    android:textSize="20sp" />
				
				 <LinearLayout 
		            android:id="@+id/layoutForSocketConnectionCreation"
		            android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="vertical" 
		            > 
		            </LinearLayout>
				
				 
				  <TextView  
				       android:id="@+id/selection"
				       android:layout_width="fill_parent" 
				       android:layout_height="wrap_content" 
				       android:gravity="left"
				       android:textSize="15sp"
				       android:paddingLeft="7dp"
				       android:paddingTop="15dp"
				       />
					
					<Spinner 
				       android:id="@+id/spinner"
				       android:layout_width="fill_parent" 
				       android:layout_height="wrap_content"
				       android:drawSelectorOnTop="true"
				       android:padding="10.5dp" />
								 
			
				
				
	
				
				 
				
		</LinearLayout>

 </ScrollView>
</LinearLayout>  