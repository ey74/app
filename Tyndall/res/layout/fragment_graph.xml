<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
	xmlns:tools="http://schemas.android.com/tools"  
	android:id="@+id/fragmentHistory"
	android:layout_width="match_parent"  
	android:layout_height="match_parent"  
	android:paddingBottom="@dimen/activity_vertical_margin"  
	android:paddingLeft="@dimen/activity_horizontal_margin"  
	android:paddingRight="@dimen/activity_horizontal_margin"  
	android:paddingTop="@dimen/activity_vertical_margin" 
	android:orientation="vertical"
  >   
	
    <ScrollView 
        android:id="@+id/ScrlView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        
        <LinearLayout 
            android:id="@+id/layoutForScrollGraph"
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical" 
        	android:paddingBottom="10dip"
            >
	  
			 <TextView
					    android:id="@+id/textViewConnectionNode"
					    android:layout_width="fill_parent"
					    android:layout_height="30sp"
					    android:layout_gravity="center"
					    android:gravity="center"
					    android:background="@drawable/drawable_title"
					    android:text="Accelerometer graph"
					    android:textColor="@color/white"
					    android:textSize="20sp" />  
	
			<fragment
			    android:id="@+id/fragment2"
			    android:name="com.example.tyndall.Chart"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content" />
			
		 	<View 
			    android:layout_width="320dp" 
			    android:layout_height="1dip"
			    android:background="#A4A39F"
			    />  
			    
		 	<TextView   
				android:id="@+id/paddingGraph"
				android:paddingBottom="50dip"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content" />

		 	<TextView
				    android:id="@+id/datasGraph"
				    android:layout_width="fill_parent"
				    android:layout_height="30sp"
				    android:layout_gravity="center"
				    android:gravity="center"
				    android:background="@drawable/drawable_title"
				    android:text="Datas"
				    android:textColor="@color/white"
				    android:textSize="20sp" />  
			

			<TextView   
				android:id="@+id/textViewSamplingGraph"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Sampling rate = " 
			 />
			
			 <View 
		    android:layout_width="320dp" 
		    android:layout_height="1dip"
		    android:background="#A4A39F"
		    />  
			
			<TextView   
					android:id="@+id/accelXSamplesGraph"  
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingRight="40dip"
					android:text="AccelX = " />
			
			<TextView   
					android:id="@+id/accelYSamplesGraph"  
					android:layout_width="fill_parent"  
					android:layout_height="wrap_content"
					android:paddingRight="40dip"
					android:text="AccelY = " />
			
			<TextView   
				android:id="@+id/accelZSamplesGraph"  
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:paddingRight="30dp"
				android:text="AccelZ = " />	
				
			<TextView   
				android:id="@+id/textViewFftSamplesGraphX"  
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="FFT = " 
			 />
			<TextView   
				android:id="@+id/textViewFftSamplesGraphY"  
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="FFT = " 
			 />
			<TextView   
				android:id="@+id/textViewFftSamplesGraphZ"  
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="FFT = " 
			 />
			
		
			 <View 
		    android:layout_width="320dp" 
		    android:layout_height="1dip"
		    android:background="#A4A39F"
		    />  
			
			<TextView   
				android:id="@+id/xMaxFreq"  
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="xmax freq = " 
			 />
			<TextView   
				android:id="@+id/yMaxFreq"  
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="ymax freq = " 
			 />
			<TextView   
				android:id="@+id/zMaxFreq"  
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="zmax freq = " 
			 />
			<TextView   
				android:id="@+id/textViewRMS"  
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="RMS total = " 
			 />
			
			
		
		
 </LinearLayout>
 </ScrollView>
</LinearLayout>  