<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tyndall"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
<uses-permission android:name="android.permission.INTERNET"/>
<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
<uses-permission android:name="android.permission.CHANGE_WIFI_STATE"></uses-permission>

 
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tyndall"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.tyndall.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="com.example.tyndall.MainActivity"
             android:label="@string/app_name" ></activity>
        
         <activity android:name="com.example.tyndall.BufferListener"
             android:label="@string/app_name" ></activity>
         <activity android:name="com.example.tyndall.ConnexionThread"
             android:label="@string/app_name" ></activity>
         <activity android:name="com.example.tyndall.HandlerThread"
             android:label="@string/app_name" ></activity>
         <activity android:name="com.example.tyndall.MusicFragment"
             android:label="@string/app_name" ></activity>
         <activity android:name="com.example.tyndall.HistoryFragment"
             android:label="@string/app_name" ></activity>
           <activity android:name="com.example.tyndall.MainFragment"
             android:label="@string/app_name" ></activity>
            <activity android:name="com.example.tyndall.SetPreferenceActivity"
             android:label="@string/app_name" ></activity>
         
    </application>

</manifest>
