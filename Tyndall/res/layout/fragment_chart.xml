<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
  
      <LinearLayout 
        android:id="@+id/ll"
        android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
       	android:orientation="vertical" 
           >
	    <com.androidplot.xy.XYPlot            
				android:id="@+id/dynamicPlot"            
				android:layout_width="310dp"            
				android:layout_height="100dp"    
				androidplot.title="Values Accelerometer"
		/> 
		
	    <TextView   
					android:id="@+id/separation1"  
					android:paddingTop="50dip"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
				
	     <TextView
					    android:id="@+id/textViewConnectionNode"
					    android:layout_width="fill_parent"
					    android:layout_height="30sp"
					    android:layout_gravity="center"
					    android:gravity="center"
					    android:background="@drawable/drawable_title"
					    android:text="Accelerometer FFT Graph"
					    android:textColor="@color/white"
					    android:textSize="20sp" />
	     
	    <com.androidplot.xy.XYPlot            
				android:id="@+id/dynamicPlotFourier"            
				android:layout_width="310dp"            
				android:layout_height="100dp"             
				androidplot.title="Values FFT Accelerometer"/> 
	</LinearLayout>

</LinearLayout>
